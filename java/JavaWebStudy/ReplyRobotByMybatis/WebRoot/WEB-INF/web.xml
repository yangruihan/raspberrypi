<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ReplyRobotByMybatis</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>ListServlet</servlet-name>
    <servlet-class>com.yrh.servlet.ListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteOneServlet</servlet-name>
    <servlet-class>com.yrh.servlet.DeleteOneServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteListServlet</servlet-name>
    <servlet-class>com.yrh.servlet.DeleteListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InitTalkServlet</servlet-name>
    <servlet-class>com.yrh.servlet.InitTalkServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AutoReplyServlet</servlet-name>
    <servlet-class>com.yrh.servlet.AutoReplyServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>ListServlet</servlet-name>
    <url-pattern>/servlet/List.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteOneServlet</servlet-name>
    <url-pattern>/servlet/DeleteOne.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteListServlet</servlet-name>
    <url-pattern>/servlet/DeleteList.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InitTalkServlet</servlet-name>
    <url-pattern>/servlet/InitTalk.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AutoReplyServlet</servlet-name>
    <url-pattern>/servlet/AutoReply.action</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.yrh.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>